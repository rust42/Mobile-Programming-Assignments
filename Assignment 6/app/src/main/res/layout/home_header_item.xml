<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="200dp"
        android:adjustViewBounds="true"
        android:src="@drawable/sandeep_cover"
        android:id="@+id/cover_photo"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/sandeep_profile"
        android:id="@+id/profile_photo"
        app:civ_border_width="4dp"
        app:civ_border_color="#DDD"
        app:civ_border_overlay="true"
        app:layout_constraintBottom_toBottomOf="@id/cover_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintDimensionRatio="1:1"
        />

    <TextView
        app:layout_goneMarginTop="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/sandeep_koirala"
        android:textColor="@color/black"
        android:id="@+id/name"
        android:textSize="20sp"
        android:layout_marginEnd="60dp"
        app:layout_constraintTop_toBottomOf="@id/cover_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/mobile_software_engineer"
        android:textColor="@color/black"
        android:id="@+id/title"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintEnd_toEndOf="@id/name" />
</androidx.constraintlayout.widget.ConstraintLayout>